.addcart {
  width: 100%;
  height: 120rpx;
  background: white;
  display: flex;
  flex-direction: row;

  color: white;
  border-top: 2rpx solid #ddd;

  /* 定位 */
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.left {
  flex: 1;

  display: flex;
  justify-content: center;
  align-items: center;

}

.left image{
  width: 110rpx;
  height: 110rpx;
}

.center {
  flex: 2;
  
  background: #ff6802;
  display: flex;
  justify-content: center;
  align-items: center;
}

.right {
  flex: 2;
  
  background: #e95f3a;
  display: flex;
  justify-content: center;
  align-items: center;
}