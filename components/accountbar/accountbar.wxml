<view class="accountbar">

  <!-- 左 -->
  <view class="left">
      <checkbox-group bindchange="selectAll">
          <checkbox value="all" checked="{{isChecked}}">全选</checkbox>
      </checkbox-group>
      
  </view>
  <!-- 中 -->
  <view class="center">
    <text>合计:</text>
    <text>{{summary}}元</text>
  </view>
  <!-- 右 -->

  <view bindtap="clickAccount" class="right">
    结算:( {{summary}} )
  </view>

</view>