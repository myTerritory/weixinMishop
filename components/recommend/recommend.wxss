/* components/recommend/recommend.wxss */
/*第一个item 布局  */
.recommend{
  height: 320rpx;
  width: 100%;
  background: #dddddd;

  display: flex;
  flex-direction: row;
  justify-content: space-between;
  
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

/* 每一个item */
.view-item{
    flex: 1;
    background: red;
}

.view-item:nth-child(1){
  margin-right: 1rpx;
}

.img{
  width: 100%;
  height: 100%;
}